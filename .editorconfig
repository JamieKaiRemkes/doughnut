root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Java files
[*.{java,gradle,groovy}]
indent_size = 4
max_line_length = 120

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
quote_type = single
max_line_length = 80

# Vue files
[*.vue]
quote_type = single
max_line_length = 80

# Test files
[*.{spec,test}.{ts,tsx,js,jsx}]
quote_type = single
max_line_length = 80

# Cypress and Cucumber files
[*.{feature,cy.ts}]
indent_size = 2
max_line_length = 80

# Configuration files
[*.{json,yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf
